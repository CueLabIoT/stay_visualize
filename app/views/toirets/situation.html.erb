              <%= image_tag("opened.png", :class => "toiret_icon") %>
              <% end %>
            </br>
            <%= vtoiret.datetime1.strftime("%H:%M")%>
            <td class="vert-align text-align">
              <% if vtoiret.flag2 then %>
                <%= image_tag("closed.png", :class => "toiret_icon") %>
              <% else %>
                <%= image_tag("opened.png", :class => "toiret_icon") %>
              <% end %>
            </br>
            <%= vtoiret.datetime2.strftime("%H:%M")%>
          </tr>
        </table>
      </div>
      <% end %>
    </div>
