<div class="container-fluid">
    <div class="row">
      <% @toiret_vlist.each do |vtoiret| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <table class="table table-striped">
          <tr>
            <td class="vert-align">
              <h1><%= vtoiret.toiret_floor %>F</h1>
            </td>
            <td class="vert-align text-align">
              <% if vtoiret.flag1 then %>
              <%= image_tag("closed.png", :class => "toiret_icon") %>
