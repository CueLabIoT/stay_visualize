<table class="table table-striped">
  <tr>
    <th>Time</th>
    <th>フロア</th>
    <th>トイレNo</th>
    <th>いる/いない</th>
    <th>使った/空いてた時間</th>
  </tr>
<% @toiret_maxdate_group.each do |toiret| %>
  <tr>
    <td><%= toiret.datetime %></td>
    <td><%= toiret.toiret_floor %></td>
    <td><%= toiret.toiret_num %></td>
    <td>
      <% if toiret.flag then %>使ってる
      <% else %>空いている
      <% end %>
    </td>
    <td><%= toiret.used_time %></td>
  </tr>
<% end %>
</table>
